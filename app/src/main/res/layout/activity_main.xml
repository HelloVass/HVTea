<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <android.support.v4.widget.Space
      android:layout_width="match_parent"
      android:layout_height="48dp"
      />

  <Button
      android:id="@+id/btn_peroimageloader_test"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="PeroImageLoader 测试"
      android:textSize="14sp"
      />

  <android.support.v4.widget.Space
      android:layout_width="wrap_content"
      android:layout_height="16dp"
      />

  <Button
      android:id="@+id/btn_perotaglayout_test"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="PeroTagLayout 测试"
      android:textSize="14sp"
      />

  <android.support.v4.widget.Space
      android:layout_width="wrap_content"
      android:layout_height="16dp"
      />

  <Button
      android:id="@+id/btn_peroninegridview_test"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="PeroNineGridView 测试"
      android:textSize="14sp"
      />

  <android.support.v4.widget.Space
      android:layout_width="wrap_content"
      android:layout_height="16dp"
      />

  <Button
      android:id="@+id/btn_perodialog_test"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="PeroDialog 测试"
      android:textSize="14sp"
      />

  <android.support.v4.widget.Space
      android:layout_width="wrap_content"
      android:layout_height="16dp"
      />

  <Button
      android:id="@+id/btn_peropullrecycler_test"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="PeroPullRecycler 测试"
      android:textSize="14sp"
      />

</LinearLayout>